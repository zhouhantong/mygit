.gxxm-box
  width 16.875rem
  height 13.9rem
  background-color #ffffff
  border-radius 0.1875rem
  margin 7.8125rem  auto 0 auto
  .gxxm-header
    text-align center
    font-weight 600%
    box-sizing border-box
    padding 0.625rem 0
    border-bottom solid 0.0625rem #eeeeee
    height 2.35rem
  .gxxm-list
    height 8.4375rem
    overflow-y auto
    -webkit-overflow-scrolling touch
    .gxxm-list-item
      vendor-property: display box
      font-size: 0.73rem;
      >div
        height 2rem
        width 10rem
        box-sizing  border-box
        line-height @height
        &:first-child
          background-color #f5f5f5
          width 2rem
          text-align center
        &:last-child
          width 4rem
          text-align left
      .pad-l
        padding-left 1rem
      .color-0
        color: #DE0000
      .color-1
        color: #43A3DD
      .color-2
        color:#069A3D
  .close-bt
    position absolute
    top -0.8rem
    right -0.8rem
    width 1.8125rem
    height 1.8125rem
  .opt-box
    vendor-property: display box
    .opt-close
      width: 1rem;
      height: 1rem;
      vertical-align: middle;
      margin-top: 0.5rem;
      margin-left: 0.6rem;
  .gxxm-bottom
    padding-top 0.6rem
    .gxxm-bottom-bt
      width: 12.8125rem
      height 1.5625rem
      line-height @height
      border: solid 0.0625rem #B30000
      border-radius 0.1875rem
      text-align center
      margin auto
      color #B30000
  .gxxm-nodata
    text-align center
    color: #b5b1b1
    padding-top 1rem

.form-layer
  border: 1px solid COMMON_COLOR_BORDER_LINE
  border-radius: 0.1875rem 
  margin: 1rem 
  .input-area
    vendor-property: display box
    box-orient: horizontal
    box-align: center
    height: 2.75rem        
    border-bottom: 1px solid COMMON_COLOR_BORDER_LINE
    &.hasicon
      > input
        margin-left: 1.75rem
    &.iconname
      background: image('home/icon_name.png') no-repeat 0.5rem center
      background-size: 1.5rem 1.5rem
    &.icontel
      background: image('home/icon_tel.png') no-repeat 0.5rem center
      background-size: 1.5rem 1.5rem    
    &.iconvericode
      background: image('home/icon_vericode.png') no-repeat 0.5rem center
      background-size: 1.5rem 1.5rem                        
    &:last-child
      border: none        
    > input,
    .text-value
      @extend .ellipsis
      box-flex: 1
      display: block
      border: none
      font-size: 0.75rem
      text-align: left
      background-color: transparent
      height: 2.75rem
      padding-left: 0.5rem
      padding-right: 2rem
      line-height: @height
      -webkit-appearance: inherit  
      color: COMMON_COLOR_GRAY 
    .text-value
      &:before
        position: absolute
        content: ''
        top: 0
        bottom: 0
        right: 1.5rem
        width: 1px
        height: 2.75rem
        background-color: COMMON_COLOR_BORDER_LINE
      &:after 
        position: absolute
        content: ""
        right: 0.4rem
        top: 1.25rem
        size: 0 0
        border: 0.3125rem solid COMMON_COLOR_BORDER_LINE
        border-color: COMMON_COLOR_BORDER_LINE transparent transparent transparent
        z-index: 10        
    > select
      position: absolute
      left: 0
      right: 0
      top: 0
      bottom: 0
      opacity: 0    
      z-index: 1000
      width: 100%
    .btn-vericode
      font-size: 0.75rem 
      color: COMMON_COLOR_RED
      width: 6.875rem
      text-align: center
      border-left: 1px solid COMMON_COLOR_BORDER_LINE
      line-height: @height
      &.disabled
        color: COMMON_COLOR_GRAY
        &.highlight
          background: transparent !important

.popup-open-layer
  position: fixed
  left: 0
  right: 0
  top: 0
  bottom: 0
  background-color: rgba(0,0,0,0.6)
  z-index: 10000
  .open-layer
    width: 18rem
    position: absolute
    top: 12%
    left: 50%
    margin-left: -9rem 
    background-color: #fff
    border-radius: 0.25rem
    .title
      line-height: 1.875rem 
      font-size: 0.875rem 
      color: COMMON_COLOR_GRAY
      font-weight: bold
      text-align: center
      border-bottom: 1px solid COMMON_COLOR_BORDER_LINE
  .view-layer
    min-height: 12.5rem 
    max-height: 14.75rem 
    overflow: scroll
    line-height: 1.2rem 
    font-size: 0.75rem 
    padding: 0.5rem 
    color: COMMON_COLOR_GRAY
  .act-bar
    vendor-property: display box
    box-orient: horizontal
    box-align: center 
    box-pack: center 
    margin: 0.625rem 0         
    > div 
      &:first-child
        background-color: #A6A6A7
      &:last-child
        background-color: COMMON_COLOR_RED
      margin: 0 0.625rem
      border-radius: 0.25rem 
      size: 5.3125rem 2rem
      line-height: @height
      font-size: 0.875rem 
      color: #fff 
      text-align: center





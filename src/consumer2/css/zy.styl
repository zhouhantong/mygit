@import "../../css/common"            

A=720/320

size(width, height, orig=true)
  if orig
    width floor(width/A)
    height floor(height/A)
  else
    width width
    height height
    
.zy-header
  height (5.625rem/A)
  background #358FA4
  line-height @height
  text-align center
  color #fff
            
#page-zy-classify,
#page-zy-preferential
  background #3D3B3B
  .vpage-content
    img
      width 100%
      display block
      margin 0
    .search-panel
      vendor-property display box
      box-pack center
      box-align center
      margin 0.3125rem
      .search-box
        box-flex 1
        border-image url(../images/search-box.png) 2 20 2 20 stretch stretch
        border-width: 1px 0.625rem
        > input
          width 90%
          height 1.5rem
          margin 0 0 0 0.625rem
          padding 0
          border none
          background transparent
          color #BAB9B9
          font-size 1rem
          line-height: @height
      .searchbt
        width 4rem
        height 1.6rem
        background url(../images/searchbt.png)
        background-size @width @height
    .hflexbox
      box-pack center
      margin-top 0.3125rem
      &:first-child
        margin-top 0
      .space
        box-flex 1
    .preferential-menu-box
      margin 0.3125rem
      .preferential-menu
        vendor-property display box
        margin-top 0.3125rem
        .title-icon
          size 13.8125rem 13.8125rem
          vendor-property display box
          box-align center
          box-pack center
          box-orient vertical
          > img
            width (3.5rem/A)
          &.one
            background #c34d39
          &.two
            background #973624
          &.three
            background #d57e4f
          .title-name
            margin-top 0.375rem
            color #fff
            font-size 0.875rem
        .preferential-menu-bt
          box-flex 1
          vendor-property display box
          box-pack center
          box-align start
          box-orient vertical
          background #EBEBEA url(../images/line.png) repeat-x left bottom
          background-size 1px
          font-size 0.875rem
          > img
            max-height 6.125rem
          &:active
            &.one
              background #3690a4
            &.two
              background #a4ba8b
            &.three
              background #c5c6c6
            &.four
              background #829561
            &.five
              background #a5d9e6
          &:before
            content ""
            size 1.25rem 1.6875rem
            background url(../images/three2.png)
            background-size @width @height
            position absolute
            left -0.25rem
            top 50%
            margin-top - (@height / 2)
          &:after
            content ""
            size 2.6875rem 0.3125rem
            background url(../images/three3.png)
            background-size @width @height
            position absolute
            right 0.625rem
            bottom 0.3125rem
          .preferential-menu-item
            vendor-property display box
            box-align center
            box-pack center
            margin-left 1.25rem
            margin-top 0.5rem
            &:first-child
              margin-top 0
            > img
              size 5rem 5rem
              border 0.125rem solid #fff
              border-radius @width
            .preferential-menu-item-valuebox
              width 8.75rem
              margin-left 0.3125rem
              .preferential-menu-item-value
                overflow hidden
                white-space nowrap
                line-height 1.125rem
                font-size 0.75rem
                &.small
                  font-size 0.625rem
                  color #929394
                  
#page-zy-notices
  .vpage-content
    img
      width 100%
      display block
      margin 0
    .notice-list
      border-image url(../images/border.png) 4 4 4 4 stretch stretch
      border-bottom-width 1px
      .notice-item
        vendor-property display box
        border-image url(../images/border.png) 4 4 4 4 stretch stretch
        border-top-width 1px
        margin-top 0.25rem
        &:after
          content ""
          size 1rem 1.6875rem
          background url(../images/icon-arrow1.png)
          background-size @width @height
          position absolute
          right 0.625rem
          top 50%
          margin-top - (@height / 2)
        .notice-icon-box
          vendor-property display box
          box-pack center
          box-align center
          box-orient vertical
          padding 0.625rem
          background #EAEAEA
          .notice-icon
            size 3.0625rem 2rem
            background url(../images/icon-notices.png?v=1)
            background-size @width @height
          .notice-time
            font-size 0.5rem
            color #3890A5
            margin-top 0.25rem
        .notice-body
          box-flex 1
          background #EAEAEA
          vendor-property display box
          box-pack center
          box-align center
          padding 0.3125rem 0
          &:before
            content ""
            width (0.6875rem/A)
            height 100%
            background url(../images/icon-notices-1.png)
            background-size @width 100%
            position absolute
            left 0
            top 0
          .notice-title
            margin 0 1.25rem 0 0.625rem
            word-break break-word
            font-size 0.875rem
            max-height 3.125rem
            overflow hidden
            text-align justify
        &.readed
          &:after
            size 1rem 1.6875rem
            background url(../images/icon-arrow2.png)
            background-size @width @height
          .notice-icon-box
            .notice-icon
              size 3.0625rem 3.0625rem
              background url(../images/icon-notices-open.png)
              background-size @width @height
            .notice-time
              color #939393
          .notice-body
            color #939393
        &.reading
          &:after
            transform rotate(-90deg)
    .notice-item-detail
      border-image url(../images/border.png) 4 4 4 4 stretch stretch
      border-top-width 1px
      background #fff
      vendor-property display box
      box-align center
      box-pack center
      box-orient vertical
      padding 0.625rem 0
      > div
        width 90%
      .notice-item-detail-box
        vendor-property display box
        font-size 0.625rem
        color #777676
        .nickname
          color #27A7E1
        .time
          margin 0 0.3125rem
      .notice-item-detail-title
        word-break break-word
        font-size 1.125rem
        font-weight 900
        margin 0.25rem 0
      .notice-item-detail-content
        color #777676
        word-break break-word
        font-size 0.875rem
        text-align justify
        padding-bottom 0.625rem
      .notice-item-detail-bt-panel
        border-top 1px solid #C9C9CA
        height (3.375rem/A)
        .start
          size 3.3125rem 3.1875rem
          background url(../images/icon-notices-start.png)
          background-size @width @height
          position absolute
          left 0
          top 0.375rem
        .delbt
          size 2.4375rem 2.8125rem
          background url(../images/icon-notices-del.png)
          background-size @width @height
          position absolute
          right 0
          top 0.375rem

.plist
  width 98%
  margin 0.25rem auto
  .item
    vendor-property display box
    box-pack center
    box-align center
    background #fff
    padding 0.25rem 0
    margin-top 0.3125rem
    &:after

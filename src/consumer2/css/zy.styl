        padding-left 0.625rem
        border-image url(../images/border1.png) 4 4 4 4 stretch stretch
        border-width 1px
        color #CC5E46
        padding 0.125rem 0.125rem 0.125rem 0.125rem
        font-weight 200
    .online-txt
      position: absolute
      bottom: 0.125rem 
      right: 0.75rem 
      line-height: 1.25rem
      font-size: 0.75rem 
      color: #e96628
      &:active 
        color: #a34414 
    .online-logo
      position: absolute
      top: 0
      left: 0
      height: 3rem 
      width: 3rem
      background: image('online/online_logo.png') no-repeat center center
      background-size: 3rem 3rem                 
  .item-explain
    background #fff
    .item-explain-value
      text-align center
      padding 0.3125rem 0
      color #BF2F00
      font-weight 900
      overflow hidden
      white-space nowrap
      margin 0 1.25rem      


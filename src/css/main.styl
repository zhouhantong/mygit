.guide-blur
  > .vpage,
  > #main-menu
    filter: blur(20px)

@keyframes guide-share-ani
  0%
    transform: translate3d(0, 0, 0) rotate(-360deg)
    opacity: 1
  20%
    transform: translate3d(45px, -15px, 0) rotate(-288deg)
  40%
    transform: translate3d(90px, -33px, 0) rotate(-216deg)
  65%
    transform: translate3d(138px, -75px, 0) rotate(-126deg)
    opacity: 0.5
  100%
    transform: translate3d(165px, -165px, 0) rotate(0deg)
    opacity: 0


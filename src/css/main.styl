// Popup
.vpopup
  position: fixed
  top: 0
  right: 0
  left: 0
  bottom: 0
  z-index: 600
  background-color: rgba(0, 0, 0, 0.5)
  vendor-property: display box
  box-orient: vertical
  box-pack: center

  > .vpopup-wrapper
    position: relative
    border-image: image('box-popup.png') 100 30 30 30 stretch stretch
    border-width: 50px 15px 15px 15px
    margin: 10px
    min-height: 80px

    &:before
      position: absolute
      content: attr(data-title)
      left: 0
      top: -40px
      font-size: 18px
      font-weight: bold
      color: white
      line-height: 30px

    .close-button
      position: absolute
      right: -10px
      top: -45px
      size: 40px 40px
      background: image('icon-close.png') no-repeat center center
      background-size: 34px

      &:active
        background-image: image('icon-close-hl.png')

    .vpopup-content
      color: #7FBA19
      margin: 0 -5px -5px -5px

.share-bar
  margin: 60px 0 10px 0
  vendor-property: display box
  box-orient: horizontal
  box-pack: center
  > .button-share
    position: relative
    min-width: 90px
    font-size: 12px
    text-align: center
    color: COLOR_TITLE_TXT
    height: 36px
    line-height: (@height - 12)
    &:before
      position: absolute
      content: ""
      left: 0
      right: 0
      top: -35px
      height: 35px
      background: image('icon01.png') no-repeat center center
      background-size: 35px
    &.add:before
      background-image: image('icon03.png')
    &.share:before
      background-image: image('icon02.png')
    &:active
      &:before
        background-image: image('icon001.png')
      &.add:before
        background-image: image('icon003.png')
      &.share:before
        background-image: image('icon002.png')
